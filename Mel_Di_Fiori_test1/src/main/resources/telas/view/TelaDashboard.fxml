<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tela_main_controller.DashboardController"
      spacing="30"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">

    <!-- Área principal do dashboard -->
    <VBox spacing="25" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">

        <Label text="🌿 FLORICULTURA DASHBOARD"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />

        <HBox spacing="35">
            <VBox spacing="12" style="-fx-background-color: linear-gradient(to bottom, #2e7d32, #1b5e20); -fx-padding: 25; -fx-border-radius: 15; -fx-background-radius: 15;">
                <Label text="Total de Plantas" style="-fx-font-size: 14px; -fx-text-fill: #ffffff;" />
                <Label fx:id="totalPlantasLabel" text="120" style="-fx-font-size: 28px; -fx-text-fill: #ffffff; -fx-font-weight: bold;" />
            </VBox>

            <VBox spacing="12" style="-fx-background-color: linear-gradient(to bottom, #2e7d32, #1b5e20); -fx-padding: 25; -fx-border-radius: 15; -fx-background-radius: 15;">
                <Label text="Produção (mês)" style="-fx-font-size: 14px; -fx-text-fill: #ffffff;" />
                <Label fx:id="producaoLabel" text="85 unidades" style="-fx-font-size: 28px; -fx-text-fill: #ffffff; -fx-font-weight: bold;" />
            </VBox>

            <VBox spacing="12" style="-fx-background-color: linear-gradient(to bottom, #2e7d32, #1b5e20); -fx-padding: 25; -fx-border-radius: 15; -fx-background-radius: 15;">
                <Label text="Vendas (mês)" style="-fx-font-size: 14px; -fx-text-fill: #ffffff;" />
                <Label fx:id="vendasLabel" text="70 unidades" style="-fx-font-size: 28px; -fx-text-fill: #ffffff; -fx-font-weight: bold;" />
            </VBox>

            <VBox spacing="12" style="-fx-background-color: linear-gradient(to bottom, #2e7d32, #1b5e20); -fx-padding: 25; -fx-border-radius: 15; -fx-background-radius: 15;">
                <Label text="Top venda" style="-fx-font-size: 14px; -fx-text-fill: #ffffff;" />
                <Label fx:id="topVendaLabel" text="Eucalipto" style="-fx-font-size: 28px; -fx-text-fill: #ffffff; -fx-font-weight: bold;" />
            </VBox>
        </HBox>

        <LineChart fx:id="graficoVendas"
                   prefHeight="300"
                   prefWidth="800"
                   style="-fx-background-color: #ffffff; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 10;">
            <xAxis>
                <CategoryAxis label="Tempo (meses)" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Unidades vendidas" />
            </yAxis>
        </LineChart>

        <BarChart fx:id="graficoProducao"
                  prefHeight="300"
                  prefWidth="800"
                  style="-fx-background-color: #ffffff; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 10;">
            <xAxis>
                <CategoryAxis label="Tempo (meses)" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Pés produzidos" />
            </yAxis>
        </BarChart>

    </VBox>

    <!-- Painel direito -->
    <VBox fx:id="listaPlantasNaoRegadas"
          spacing="14"
          alignment="TOP_LEFT"
          prefWidth="260"
          prefHeight="500"
          maxHeight="500"
          style="-fx-background-color: linear-gradient(to bottom, #2e7d32, #1b5e20); -fx-padding: 12 14 12 12; 
                 -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.18) , 6,0,3,3 );">

        <Label text="🌱 Plantas não regadas"
               alignment="CENTER_LEFT"
               maxWidth="Infinity"
               style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-padding: 0 0 0 4;" />

        <Separator style="-fx-background-color: rgba(255,255,255,0.12); -fx-pref-height: 1;"/>

        <ScrollPane fitToWidth="true" fitToHeight="true" pannable="true"
                    style="-fx-background: transparent; -fx-background-color: transparent; -fx-padding: 0;">
            <content>
                <VBox fx:id="itensPlantas" spacing="8" style="-fx-padding: 6 6 6 6;"/>
            </content>
        </ScrollPane>

    </VBox>
</HBox>
